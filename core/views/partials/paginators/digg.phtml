if (!isset($url)) {
    extract(Router::get());
    $url = "$controller/page";
    if ($module) {
        $url = "$module/$url";
    }
}

if (!isset($show)) {
    $show = 10;
}

$half = floor($show / 2);

//Calculating the start of centered pager
if ($page->current <= $half) {
    $start = 1;
} elseif (($page->total - $page->current) < $half) {
    $start = $page->total - $show + 1;
    if ($start < 1) {
        $start = 1;
    }
} else {
    $start = $page->current - $half;
}
$last = false;
if ($start == $page->total) {
    if ($start - 1 > 0) {
        $start -= 1;
    }

    $last = true;
}
?>

<div class="paginator">
    <?php if ($page->prev == 1) {
        echo Html::link("$url/", 'Previous', 'title="Go to previous" class="nextprev" rel="prev"');
    }
    //the link without page number is placed for page 1
    elseif ($page->prev) {
        echo Html::link("$url/$page->prev/", 'Previous', 'title="Go to previous" class="nextprev" rel="prev"');
    }
    ?>

    <?php if ($start == 1) { //the link without page number is placed for page 1
        $start = 2;
        $show -= 1;
        echo $page->current == 1 ? "<strong>1</strong>" : Html::link("$url/", '1');
    } ?>

    <?php for ($i = $start; $i <= $page->total && $i < ($start + $show); $i++) : ?>
        <?= $i == $page->current ? "<strong>$i</strong>" : Html::link("$url/$i/", $i, "title=\"Go to $i\""); ?>
    <?php endfor; ?>

    <?php if ($page->total > $i) : ?>
        <?php if ($page->total > ($i + 1)) : ?>
            ...
        <?php endif ?>

        <?php $i = $page->total - 1; ?>
        <?= Html::link("$url/$i/", $i) ?>
        <?= Html::link("$url/$page->total/", $page->total) ?>
    <?php elseif ($i == $page->total) : ?>
        <?php if ($last) : ?>
            <?= "<strong>$i</strong>" ?>
        <?php else : ?>
            <?= Html::link("$url/$i/", $i) ?>
        <?php endif; ?>
    <?php endif; ?>

    <?php if ($page->next) {
        echo Html::link("$url/$page->next/", 'Next', 'title="Go to next" class="nextprev" rel="next"');
    }
    ?>
</div>